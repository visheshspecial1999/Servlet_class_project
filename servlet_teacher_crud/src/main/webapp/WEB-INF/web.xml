	</servlet>
	<servlet-mapping>
		<servlet-name>user update</servlet-name>
		<url-pattern>/updation</url-pattern>
	</servlet-mapping>
	
	<!-- search controller configration -->
	<servlet>
		<servlet-name>user update</servlet-name>
		<servlet-class>com.jsp.servlet_teacher_crud.controller.SearchController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user update</servlet-name>
		<url-pattern>/Search</url-pattern>
	</servlet-mapping>
	
	<!-- delete controller configration -->
	<servlet>
		<servlet-name>user delete</servlet-name>
		<servlet-class>com.jsp.servlet_teacher_crud.controller.DeleteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user delete</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<!-- display controller configration -->
	<servlet>
		<servlet-name>user display</servlet-name>
		<servlet-class>com.jsp.servlet_teacher_crud.controller.DisplayController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user display</servlet-name>
		<url-pattern>/display</url-pattern>
	</servlet-mapping>
</web-app>
