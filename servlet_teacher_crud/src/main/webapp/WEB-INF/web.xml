<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <!-- register controller configration -->
	<servlet>
		<servlet-name>user register</servlet-name>
		<servlet-class>com.jsp.servlet_teacher_crud.controller.RegisterController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user register</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	
	<!-- update controller configration -->
	<servlet>
		<servlet-name>user update</servlet-name>
